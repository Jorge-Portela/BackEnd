package variaveis_numericas;

public class VariaveisNumericas {
	
	public static void main(String[] args) {
		
		System.out.println("Ola Mundo");
		
		int idadePedro;
		int idadeMarcos;
		idadePedro = 50;
		idadeMarcos = 27;
		
		int somaDasIdades = idadePedro + idadeMarcos;
		
		
		System.out.println("A soma das idades igual a " + somaDasIdades + " anos.");
	}

}
